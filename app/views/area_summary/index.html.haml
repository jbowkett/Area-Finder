%h2 Areas with schools
%table
  %tbody
    -@areas_with_schools.each_with_index do |summary, index|
      -if index %10 == 0
        %tr
      %td=link_to("#{summary.name} [#{summary.school_count}]", area_url(:id => summary.id))

%h2 Areas yet to be downloaded
%table
  %tbody
    -@areas_yet_to_be_downloaded.each_with_index do |summary, index|
      -if index %10 == 0
        %tr
      %td=link_to(summary.name, area_url(:id => summary.id))